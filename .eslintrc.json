{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:react-hooks/recommended"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "plugins": [
        "react",
        "react-hooks",
        "@typescript-eslint"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020
    },
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "project": [
                    "./**/tsconfig(.*)?.json"
                ],
                "ecmaFeatures": {
                    "jsx": true
                },
                "ecmaVersion": 2020,
                "sourceType": "module"
            },
            "rules": {
                "no-undef": "off"
            }
        }
    ],
    "rules": {
        "quotes": "error",
        "react/no-unescaped-entities": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "error"
        ],
        "indent": [
            "error",
            2
        ],
        "jsx-quotes": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}